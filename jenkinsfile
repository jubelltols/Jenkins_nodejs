pipeline {
    agent {
        docker { image 'node:17.3.12-alpine' }
    }
    stages {
        stage('linter') {
            steps {
                script {
                    sh "npm install"
                    sh "eslint -c .eslintrc.json --ext .js"
                }
            }
        }
        stage('test') {
            steps {
                script {
                    sh "npm install"
                    sh "npm run test"
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sh "npm install"
                    sh "npm run serve"
                }
            }
        }
    }
}
